<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">
      <i class="fa fa-plus"></i>
    </a>
  </h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
      <div class="panel-heading">
        
      <% @photos.each do |photo| %>
      <h3 <a href="/users/<%= photo.user.id %>"<%= photo.user.username %> class="panel-title">
      </a>
        <div class="panel-body">
          <a href="/photos/<%= photo.id %>" class="img-responsive"><image src="<%= photo.image %>"</a>
          <p>
            <% if current_user && Like.find_by(user_id: current_user.id, photo_id: photo.id) %>
                <form action="/delete_like/<%= photo.id %>" method="post" class="btn btn-link">
                   <button>
                     <i class="fa fa-heart"></i>
                   </button>
                  </form>
                <% else %>
                <form action="/create_like" method="post" class="btn btn-link">
                   <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                   <input type="hidden" name="photo_id" value="<%= photo.id %>">
                    <input type="hidden" name="user_id" value="<%= current_user.id %>">
                    <button>
                     <i class="fa fa-heart"></i>
                   </button>
                  </form>
              <% end %>
            <% photo.likes.each do |like| %>
              <%= like.user.username %>
            <% end %>
          </p>
          <% photo.comments.each do |comment| %>
            <ul class="media-list">
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                  <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a></h6>
                  <%= comment.body %>
                </div>
              </li>
            </ul>
          <% end %>
          <input name="authenticity_token" type="hidden" value="+MiPGwlAgKSc+gPz+bFyaJo8IrHdTIo6Hpf8nJOEPwnviJXstY774j/A+qRia9Q7MFvJunm8nXmtdpjDkXyo+Q==">
          
          <div class="input-group">
            <% if current_user == nil %>
              <redirect_to("/sign_in")>  
            <% else %> 
              <form form action="/create_comment" method="post">
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                <input type="hidden" name="photo_id" value="<%= photo.id %>">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">
                <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required value="<%= @comment.body %>">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                     <i class="fa fa-commenting-o"></i>
                    </button>
                  </span>
              </form> 
            <% end %>
          </div>
            <div class="btn-group btn-group-justified">
              <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show
              <i class="fa fa-chevron-left"></i>
              </a>
              <% if current_user == photo.user %>
                <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit
                <i class="fa fa-edit"></i>
                </a>
                <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete
                <i class="fa fa-trash-o"></i>
                </a>
              <% end %>
            </div>
        </div>
      <% end %>
      </div>
      </div>
    </div>
  </div>
</div>