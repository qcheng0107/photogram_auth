<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <a href="/photos/new" class="btn btn-default btn-block">
        <i class="fa fa-plus"></i>
      </a>
      <hr>
    </div>
  </div>

  <% @photos.each do |photo| %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>"><%= photo.user.username %></a>
            <small><%= time_ago_in_words(Time.now) %> ago</small>
          </h3>
        </div>
        <div class="panel-body">
            <a href="/photos/<%= photo.id %>">
              <img src="<%= photo.image %>" class="img-responsive">
            </a>
            
            <p>
            <% photo.likes.each do |like| %>
                <form action="/delete_like/<%= like.id %>" class="btn btn-link">
                  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                    <input type="hidden" name="photo_id" value="<%= photo.id %>">
                    <input type="hidden" name="user_id" value="<%= current_user.id %>">
                  <button class="btn btn-link">
                    <i class="fa fa-heart"></i>
                  </button>
                </form>

                <form action="/create_like" method="post" class="btn btn-link">
                  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                    <input type="hidden" name="photo_id" value="<%= photo.id %>">
                    <input type="hidden" name="user_id" value="<%= current_user.id %>">
                  <button class="btn btn-link">
                    <i class="fa fa-heart-o"></i>
                  </button> 
                </form>

              <%= photo.fans.pluck(:username).to_sentence %> like this
            <% end %>
            </p>

            <ul class="media-list">
              <% photo.comments.each do |comment| %>
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                    <a href="/user/<%= comment.user.id %>"><%= comment.user.username %></a>
                    <small><%= time_ago_in_words(Time.now) %> ago</small>  
                  </h6>
                  <%= comment.body %>
               </div>
              </li>
              <% end %>
              <li class="media">
                <div class="media-body">
                  <form action="/create_comment" method="post">
                    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                    <input type="hidden" name="photo_id" value="<%= photo.id %>">
                    <input type="hidden" name="user_id" value="<%= current_user.id %>">
                      <label for="body" class="sr-only">
                        Body
                      </label>

                      <div class="input-group">
                        <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>
                        <span class="input-group-btn">
                          <button class="btn btn-default" type="submit">
                          <i class="fa fa-commenting-o"></i>
                          </button>
                        </span>
                      </div>
                  </form>
                </div>
              </li>
            </ul>
            
  
            <div class="btn-group btn-group-justified">
    <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show
      <i class="fa fa-chevron-left"></i>
    </a>
    <% if current_user == photo.user %>
      <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
      Edit
        <i class="fa fa-edit"></i>
      </a>
    
      <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
      Delete
        <i class="fa fa-trash-o"></i>
      </a>
    <% end %>
  </div>
        </div>
      </div>
    </div>
  </div>

  <% end %>