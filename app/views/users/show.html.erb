<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
    <% @photos.each do |photo| %>
      <dt>Caption</dt>
      <dd><%= photo.caption %></dd>
      <dt>Image</dt>
      <dd><image src="<%= photo.image %>"></dd>
      <% photo.comments.each do |comment| %>
        <dd><%= comment.user.username %></dd>
        <dd><%= comment.body %></dd>
      <% end %> 
    <% end %>
    </dl>
  </div>
</div>
